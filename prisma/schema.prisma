model Registration {
  token       String    @id @default(uuid())
  email       String    @unique
  confirmedAt DateTime?
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  userName  String?
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
  tatoe     Tatoe[]
}

model Tatoe {
  id              String   @id @default(uuid())
  user            User     @relation(fields: [userId], references: [id])
  userId          String
  imageId         String?
  title           String?
  shortParaphrase String?
  description     String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt()
}
